<div>
  <h1 class="font-bold text-4xl">Categories#index</h1>
  <p>Find me in app/views/categories/index.html.erb</p>
</div>

<ul>
  <% @categories.each do |category| %>
    <li>
      <%= link_to category_path(category.id) do %>
        <%= "#{category.name} by #{category.user.name}" %>
      <% end %>
    </li>
  <% end %>
</ul>
