<div class="flex justify-center py-3 text-white bg-[#3778c2]">
  <h1>RESET PASSWORD</h1>
  <%= link_to new_session_path(resource_name), class: "absolute left-3" do %>
    <i class="fa-solid fa-arrow-left"></i>
  <% end %>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { "data-turbo": "false", method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="my-4 border-y border-[#c4c5c7] divide-y divide-[#c4c5c7]">
    <div class="field">
      <%= f.label :email, class: "sr-only" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "min-w-full border-none" %>
    </div>
  </div>

  <div class="actions mb-4 flex justify-center">
    <%= f.submit "Reset password", class: "text-white bg-[#3778c2] p-3 w-3/5 rounded mx-auto" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
