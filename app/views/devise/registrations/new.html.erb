<div class="flex justify-center py-3 text-white bg-[#3778c2] relative">
  <h1>REGISTER</h1>
  <%= link_to root_path, class: "absolute left-3" do %>
    <i class="fa-solid fa-arrow-left"></i>
  <% end %>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { "data-turbo": "false" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="my-4 border-y border-[#c4c5c7] divide-y divide-[#c4c5c7]">
    <div class="field">
      <%= f.label :name, class: "sr-only" %>
      <%= f.text_field :name, autofocus: true, placeholder: "Full Name", class: "min-w-full border-none" %>
    </div>

    <div class="field">
      <%= f.label :email, class: "sr-only" %>
      <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "min-w-full border-none" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "sr-only" %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "min-w-full border-none" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "sr-only" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Confirmation", class: "min-w-full border-none" %>
    </div>
  </div>

  <div class="actions mb-4 flex justify-center">
    <%= f.submit "SIGN UP", class: "text-white bg-[#3778c2] p-3 w-3/5 rounded mx-auto" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
